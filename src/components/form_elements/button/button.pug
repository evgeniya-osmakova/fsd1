mixin button(options)
  - const { type, positionInPage, isGradient, text, dim, size } = options
  - const gradient = `${positionInPage}--gradient-${size}`
  - const white = `${positionInPage}--white-${size}`
  - const hovered = (dim) ? 'gradient-back--dim' : ''

    if isGradient
      if positionInPage === 'header-btn' || size === 'small'
        button.btn(class=`${positionInPage} ${gradient} ${dim}`, type=type)
          |#{text}
      else
        .btn-and-arrow
          input.btn(class=`${positionInPage} ${gradient}`, type=type, value=text)
          i.material-icons.arrow arrow_forward
    else
      .gradient-back(class=hovered)
        button.btn(class=`${positionInPage} ${white}`, type=type)
          |#{text}

