mixin booking()
  mixin info()
    .info-icon
      .info-icon__text
        | i

  form.booking
    .booking__header
      +numberData(888, true, true, '9 990')
    .booking__search
      +bookingData('19.08.2019', '23.08.2019', '3 гостя')
    .booking-text
      .booking-text__left
        | 9 990₽ х 4 суток
      .booking-text__right
        | 39 960₽
    .booking-text
      .booking-text__left
        .booking-left
          | Сбор за услуги: скидка 2 179₽
          +info()
      .booking-text__right
        | 0₽
    .booking-text.booking-text--last
      .booking-text__left
        .booking-left
          | Сбор за доп. услуги
          +info()
      .booking-text__right
        | 300₽
    .booking__total.booking-total
      h2.booking-total__text
        |Итого
      .booking-total__dots
      h2.booking-total__text
        |38 081₽
    .booking__btn
      +button({
        type: 'submit',
        positionInPage: 'body-btn',
        isGradient: true,
        text: 'забронировать',
        dim: '',
        size: 'big'
      })
