mixin bookingData(arrivalDate, departureDate, guests)
  .bookingData
    .bookingData__dates
      .arrival
        +input('date', 'xsmall', arrivalDate, false, {
          existence: true,
          open: false
        }, 'прибытие', 'regular')
      .departure
        +input('date', 'xsmall', departureDate, false, {
          existence: true,
          open: false
        }, 'выезд', 'regular')
    .bookingData__guests
      +input('text', 'big', guests, false, {
        existence: true,
        open: false
      }, 'гости', 'regular')
