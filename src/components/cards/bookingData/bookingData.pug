mixin bookingData(arrivalDate, departureDate, guests)
  .bookingData
    .bookingData__dates
      .arrival
        +input({
          type: 'text',
          size: 'xsmall',
          placeholder: arrivalDate,
          arrow: false,
          dropdown: {existence: true, open: false},
          title: 'прибытие',
          hover: 'regular',
          clarification: '',
          isMasked: false,
          isDataPicker: true,
        })
      .departure
        +input({
          type: 'text',
          size: 'xsmall',
          placeholder: departureDate,
          arrow: false,
          dropdown: {existence: true, open: false},
          title: 'выезд',
          hover: 'regular',
          clarification: '',
          isMasked: false,
          isDataPicker: false,
        })
    .bookingData__guests
      +input({
        type: 'text',
        size: 'big',
        placeholder: guests,
        arrow: false,
        dropdown: {existence: true, open: false},
        title: 'гости',
        hover: 'regular',
        clarification: '',
        isMasked: false,
        isDataPicker: false,
      })
